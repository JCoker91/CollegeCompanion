<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cokerj.collegecompanion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegeCompanion">
        <activity
            android:name=".UI.MainActivity"
            android:exported="true" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <receiver
            android:name=".UI.MyReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".UI.EditNote"
            android:exported="false"
            android:label="Edit Note" />
        <activity
            android:name=".UI.AddNote"
            android:exported="false"
            android:label="Add Note" />
        <activity
            android:name=".UI.NoteDetailsScreen"
            android:exported="false"
            android:label="Note Details" />
        <activity
            android:name=".UI.CourseNotes"
            android:exported="false"
            android:label="Course Notes" />
        <activity
            android:name=".UI.EditAssessment"
            android:exported="false"
            android:label="Edit Assessment" />
        <activity
            android:name=".UI.AddAssessment"
            android:exported="false"
            android:label="Add Assessment" />
        <activity
            android:name=".UI.EditCourse"
            android:exported="false"
            android:label="Edit Course" />
        <activity
            android:name=".UI.EditTerm"
            android:exported="false"
            android:label="Edit Term" />
        <activity
            android:name=".UI.AddCourse"
            android:exported="false"
            android:label="Add Course"
            android:parentActivityName=".UI.TermDetailsScreen" />
        <activity
            android:name=".UI.AddTerm"
            android:exported="false"
            android:label="Add Term"
            android:parentActivityName=".UI.TermsScreen" />
        <activity
            android:name=".UI.AssessmentDetailsScreen"
            android:exported="false"
            android:label="Assessment Details"
            android:parentActivityName=".UI.CourseDetailsScreen" />
        <activity
            android:name=".UI.CourseDetailsScreen"
            android:exported="false"
            android:label="Course Details"
            android:parentActivityName=".UI.TermDetailsScreen" />
        <activity
            android:name=".UI.TermDetailsScreen"
            android:exported="false"
            android:label="Term Details"
            android:parentActivityName=".UI.TermsScreen" />
        <activity
            android:name=".UI.TermsScreen"
            android:label="Terms"
            android:parentActivityName=".UI.MainActivity"
            android:exported="false">

        </activity>
    </application>

</manifest>